<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".ui.routine.RoutineDetailActivity" >

    <ImageView
        android:id="@+id/routine_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/hci"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/routine_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Routine"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/button_fav"
        app:layout_constraintEnd_toStartOf="@+id/button_fav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routine_image" />

    <ImageButton
        android:background="@null"
        android:id="@+id/button_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Like"
        app:layout_constraintEnd_toStartOf="@+id/button_share"
        app:layout_constraintTop_toBottomOf="@+id/routine_image"
        app:srcCompat="@drawable/ic_baseline_star_24" />

    <ImageButton
        android:background="@null"
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routine_image"
        app:srcCompat="@drawable/ic_baseline_search_24" />

    <TextView
        android:id="@+id/routine_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:text="30 min"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routine_title" />

    <TextView
        android:id="@+id/routine_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:text="Principiante"
        app:layout_constraintStart_toEndOf="@+id/routine_duration"
        app:layout_constraintTop_toBottomOf="@+id/routine_title" />

    <TextView
        android:id="@+id/routine_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:text="{Star} 7.7K"
        app:layout_constraintStart_toEndOf="@+id/routine_difficulty"
        app:layout_constraintTop_toBottomOf="@+id/routine_title" />

    <TextView
        android:id="@+id/routine_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:text="Calistenia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routine_duration" />

    <TextView
        android:id="@+id/routine_equipment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:text="Sin equipamiento"
        app:layout_constraintStart_toEndOf="@+id/routine_category"
        app:layout_constraintTop_toBottomOf="@+id/routine_difficulty" />

</androidx.constraintlayout.widget.ConstraintLayout>