<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".ui.routine.RoutineDetailActivity" >

    <ImageView
        android:id="@+id/routine_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxHeight="250dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/hci"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/routine_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/routine_image" />

    <TextView
        android:id="@+id/routine_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        app:layout_constraintTop_toBottomOf="@+id/routine_title" />

    <LinearLayout
        android:id="@+id/routine_desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/routine_detail" >

        <TextView
            android:id="@+id/routine_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8sp" />

        <TextView
            android:id="@+id/routine_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8sp" />

        <TextView
            android:id="@+id/routine_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/routine_desc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/routine_desc1" >

        <TextView
            android:id="@+id/routine_equipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>